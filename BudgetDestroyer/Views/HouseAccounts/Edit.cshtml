@model BudgetDestroyer.Models.HouseAccount

@{

}
    
<div class="col col-login mx-auto">
    @using (Html.BeginForm("Edit", "HouseAccounts", FormMethod.Post, new { @class = "card" }))
    {
        @Html.AntiForgeryToken()

        <div class="card-body p-6">
            <div class="card-title">
                <h4>Edit Account</h4>
                <hr />
            </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.HouseholdId)
            @Html.HiddenFor(model => model.)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Balance, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ReconciledBalace, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.ReconciledBalace, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ReconciledBalace, "", new { @class = "text-danger" })
                </div>

                <div class="form-footer">
                    <input type="submit" value="Save" class="btn btn-primary btn-block" />
                </div>
        </div>
    }
</div>
