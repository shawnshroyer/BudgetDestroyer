@model BudgetDestroyer.Models.BudgetItem

@{

}


<div class="col col-login mx-auto">
    @using (Html.BeginForm("Edit", "BudgetItems", FormMethod.Post, new { @class = "card" }))
    {
        @Html.AntiForgeryToken()

    <div class="card-body p-6">
        <div class="card-title">
            <h4>Budget Categories</h4>
            <hr />
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BudgetId, "BudgetId", htmlAttributes: new { @class = "form-label" })
            @Html.DropDownList("BudgetId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BudgetId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
        </div>

