<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta http-equiv="Content-Language" content="en" />
    <meta name="msapplication-TileColor" content="#2d89ef">
    <meta name="theme-color" content="#4188c9">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">

    <link rel="icon" href="~/Images/icon-cut-cost.png" sizes="64x64" type="image/x-icon" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/icon-cut-cost.png" />

    <title>Budget Destoyer</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,300i,400,400i,500,500i,600,600i,700,700i&amp;subset=latin-ext">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Dashboard Core -->
    <link href="~/assets/css/dashboard.css" rel="stylesheet" />

    <!-- Personal Customizations -->
    <link href="~/Content/BudgetDestroyer.css" rel="stylesheet" />

    @*<!-- c3.js Charts Plugin -->
        <link href="./assets/plugins/charts-c3/plugin.css" rel="stylesheet" />
        <!-- Google Maps Plugin -->
        <link href="./assets/plugins/maps-google/plugin.css" rel="stylesheet" />*@
</head>

<body class="">
    <div class="page">
        <div class="page-main">

            @Html.Partial("Header")

            @RenderBody()

        </div>

        <footer class="footer">
            <div class="container">
                <div class="row align-items-center flex-row-reverse">
                    <div class="col-auto ml-lg-auto">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <ul class="list-inline list-inline-dots mb-0">
                                    <a href="https://github.com/shawnshroyer" class="btn btn-outline-primary btn-sm">Source code</a>
                                    <a href="https://github.com/tabler/tabler" class="btn btn-outline-primary btn-sm">Source code</a>
                                </ul>
                            </div>
                            <div class="col-auto">
                                <a href="https://github.com/tabler/tabler" class="btn btn-outline-primary btn-sm">Source code</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-auto mt-3 mt-lg-0 text-center">
                        Copyright © 2018-@DateTime.Now Tabler Theme by <a href="https://codecalm.net" target="_blank">codecalm.net</a> and Modified by Destroyer Productions All rights reserved.
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/assets/js/require.min.js"></script>
    <script>
        requirejs.config({
            baseUrl: '../.'
        });
    </script>

    <!-- Dashboard Core -->
    <script src="~/assets/js/dashboard.js"></script>

    @*<!-- c3.js Charts Plugin -->
        <script src="./assets/plugins/charts-c3/plugin.js"></script>
        <!-- Google Maps Plugin -->
        <script src="./assets/plugins/maps-google/plugin.js"></script>
        <!-- Input Mask Plugin -->
        <script src="./assets/plugins/input-mask/plugin.js"></script>*@


    @RenderSection("scripts", required: false)
</body>
</html>
